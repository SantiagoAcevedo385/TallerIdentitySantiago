@model IEnumerable<TallerIndentity.Models.Venta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Ventas</h1>

<p></p>
<form asp-controller="Ventas" asp-action="Index">
    <div class="row justify-content-between">
        <div class="col-md-auto"><a asp-action="Create" class="btn btn-secondary" style="float: right;">Registrar una venta</a></div>
        <div class="col-md-7">
            <div class="d-flex justify-content-end">
                <select class="form-control valid" style="margin-right:50px" data-val="true" data-val-required="Este campo es requerido" name="option">
                    <option value="1">Cedula cliente</option>
                    <option value="2">Numero factura</option>
                </select>
                <input type="number" name="filter" class="form-control" style="margin-right:3px" />
                <input type="submit" value="Buscar" class="btn btn-dark" />
            </div>

        </div>


    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover" style="margin-top:20px">
        <thead class="thead-dark">
            <tr>
                <th>
                    Numero factura
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaVenta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    Acciones
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Cedula) -
                        @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                        @Html.DisplayFor(modelItem => item.Cliente.Apellido)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.IdVenta">Editar</a> |
                        <a asp-action="Details" class="btn btn-sm btn-outline-primary" asp-route-id="@item.IdVenta">Detalle</a> |
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.IdVenta">Eliminar</a>
                        @*<a asp-action="Delete" class="btn btn-primaty" asp-route-id="@item.IdVenta">Seleccionar</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="text-align: center;">No se encontraron datos.</p>
}
